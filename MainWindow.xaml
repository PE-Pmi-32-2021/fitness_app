<Window x:Class="fitness_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fitness_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border Padding="40" Background="Black">
        <StackPanel Background="Black">
            <Button x:Name="BackFromLoginButton" Content="Back" Background="#FF0BDA51" FontSize="25" Foreground="#FFF0E8E8"/>
            <Label Content="User" HorizontalContentAlignment="Center" FontSize="25" Foreground="#FFF0E8E8" Background="Black"/>
            <TextBox x:Name="UserTextBox" HorizontalContentAlignment="Center" FontSize="25"/>
            <Label Content="Password" HorizontalContentAlignment="Center" FontSize="25" Foreground="#FFF0E8E8" Background="Black"/>
            <TextBox x:Name="PasswordTextBox" HorizontalContentAlignment="Center" FontSize="25"/>
            <RadioButton x:Name="RememberMeRadioButton" Content="Remeber me" Margin="10" HorizontalAlignment="Center" Foreground="#FFF0E8E8" Background="White"/>
            <Button x:Name="LoginButton" Content="Login" Background="#FF0BDA51" FontSize="25" Foreground="#FFF0E8E8"/>
        </StackPanel>
    </Border>
</Window>
